<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings"
        android:background="#000000"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleX=".9"
        android:scaleY=".9"
        android:padding="10dp"
        android:id="@+id/settingsButton"/>

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teamNumberSearch"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:background="#000000"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#777777"
        android:backgroundTint="#000000"
        android:hint="Team Number"
        android:layout_toRightOf="@id/settingsButton"
        app:backgroundTint="#000000"/>
    <android.support.v7.widget.AppCompatEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matchNumberSearch"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:background="#000000"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#777777"
        android:backgroundTint="#000000"
        android:hint="Match Number"
        android:layout_centerHorizontal="true"
        app:backgroundTint="#000000"/>
    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX=".5"
        android:scaleY=".5"
        android:src="@drawable/ic_clear"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/matchNumberSearch"
        android:id="@+id/clearButton"
        android:background="#000000"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculationButton"
        android:text="MAX"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/clearButton"
        android:background="#000000"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_refresh"
        android:scaleY=".9"
        android:scaleX=".9"
        android:background="#000000"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/refreshButton"/>

</RelativeLayout>